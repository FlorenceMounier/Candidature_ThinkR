$(document).ready(function(){$(window).on("scroll resize",function(){var e,o=$(this);1020<=o.width()?($(".leader").css("position","initial"),$(".superpage.display-bottom").css("margin-top","0"),e=$(".header-content-wrapper").height(),o.scrollTop()>e?$("#study-menu").addClass("fixedTop"):$("#study-menu").removeClass("fixedTop")):($(".leader").css("position","fixed"),$(".superpage.display-bottom").css("margin-top","40px"),0<$("#cookieChoiceInfo").length&&(e=$("#cookieChoiceInfo").height(),o.scrollTop()>e?$(".leader").addClass("fixedTop"):$(".leader").removeClass("fixedTop")))})});